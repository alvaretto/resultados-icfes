// Prisma Schema - Soporta SQLite (dev) y PostgreSQL (prod)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Modelo: Estudiante con sus resultados ICFES
model Student {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Información del estudiante
  primerApellido    String
  segundoApellido   String
  primerNombre      String
  segundoNombre     String
  tipoDocumento     String // TI, CC, PPT
  numeroDocumento   String
  grupo             String // 11A, 11B, P3A, P3B, P3C
  modelo            String // "Regular" o "Flexible"
  anio              Int    // 2024, 2025

  // Puntajes por área (0-100)
  lecturaCritica       Int
  matematicas          Int
  socialesCiudadanas   Int
  cienciasNaturales    Int
  ingles               Int
  puntajeGlobal        Int // 0-500

  // Índices para optimizar consultas
  @@unique([numeroDocumento, anio])
  @@index([modelo])
  @@index([anio])
  @@index([grupo])
}

